<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- set color background-->
    <solid
        android:color="@color/windowBackground" >
    </solid>

    <!-- attribute set color and width of the border -->
    <stroke
        android:width="2dp"
        android:color="@color/color_white" >
    </stroke>

    <!-- align attributes-->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" >
    </padding>

    <!-- radius -->
    <corners
        android:radius="0dp" >
    </corners>

</shape>