<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- set color background-->
    <solid
        android:color="@color/color_button_rate" >
    </solid>

    <!-- attribute set color and width of the border -->
    <stroke
        android:width="0dp"
        android:color="@color/color_button_rate" >
    </stroke>

    <!-- align attributes-->
    <padding
        android:left="15dp"
        android:top="5dp"
        android:right="15dp"
        android:bottom="5dp" >
    </padding>

    <!-- radius -->
    <corners
        android:radius="10dp" >
    </corners>

</shape>